{
  "name": "rosscalimlim.me",
  "version": "1.0.0",
  "author": "Ross F. Calimlim <ross.calimlim@gmail.com>",
  "license": "MIT",
  "description": "Ross F. Calimlim's portfolio site.",
  "scripts": {
    "clean": "rimraf dist",
    "genPageSize": "bash scripts/page-size-data.sh",
    "genResumeJson": "yarn run ts-node scripts/writeResumeToJson.ts",
    "compileLatex": "mkdir -p dist/files && lualatex -c --output-directory dist/files src/cv/cv.tex",
    "rmLatexLogs": "rm dist/files/cv.aux && rm dist/files/cv.log",
    "buildSite": "eleventy && yarn genPageSize && eleventy",
    "buildResume": "yarn genResumeJson && yarn compileLatex && yarn rmLatexLogs",
    "build": "yarn clean && yarn buildSite && yarn buildResume",
    "start": "yarn build && eleventy --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^18.15.5",
    "clean-css": "^5.1.5",
    "date-fns": "^2.23.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^5.0.2"
  },
  "customDependencies": {
    "lualatex": "https://www.luatex.org/download.html"
  },
  "packageManager": "yarn@3.5.0"
}
