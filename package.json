{
  "name": "rosscalimlim.me",
  "version": "1.0.0",
  "author": "Ross F. Calimlim <ross.calimlim@gmail.com>",
  "license": "MIT",
  "description": "Ross F. Calimlim's portfolio site.",
  "scripts": {
    "clean": "rimraf dist",
    "genPageSize": "bash scripts/page-size-data.sh",
    "genResumeJson": "pnpm exec ts-node scripts/writeResumeToJson.ts",
    "compileLatexSplitWidth": "mkdir -p dist/files && latexmk -lualatex -cd -output-directory=../../../../dist/files src/cv/tex/plush-cv/plush_cv",
    "buildSite": "eleventy && pnpm genPageSize && eleventy",
    "buildResume": "pnpm genResumeJson && pnpm compileLatexSplitWidth && cp dist/files/resume.json src/_data",
    "build": "pnpm clean && pnpm buildSite && pnpm buildResume",
    "start": "pnpm build && eleventy --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^18.15.5",
    "clean-css": "^5.1.5",
    "date-fns": "^2.23.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "typescript": "^5.0.2"
  },
  "customDependencies": {
    "lualatex": "https://www.luatex.org/download.html"
  },
  "packageManager": "pnpm@8.14.1"
}
